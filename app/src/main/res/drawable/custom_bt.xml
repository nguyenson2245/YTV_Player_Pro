<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF0000" /> <!-- Màu nền khi nút được nhấn -->
            <corners android:radius="8dp" /> <!-- Bán kính góc là 8dp -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#00FF00" /> <!-- Màu nền mặc định của nút -->
            <corners android:radius="8dp" /> <!-- Bán kính góc là 8dp -->
        </shape>
    </item>
</selector>